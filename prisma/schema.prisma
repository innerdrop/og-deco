generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  phone     String?
  role      String   @default("USER") // ADMIN, USER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Category {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  image     String?
  products  Product[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  costPrice   Float    @default(0)
  image       String?
  isNew       Boolean  @default(false)
  stock       Int      @default(100)
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  orderItems  OrderItem[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id        String      @id @default(cuid())
  total     Float
  status    String      @default("PENDING") // PENDING, PAID, SHIPPED, DELIVERED, CANCELLED
  
  userId    String?     // Optional for guest checkout
  user      User?       @relation(fields: [userId], references: [id])
  
  items     OrderItem[]
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  quantity  Int
  price     Float   // Price at time of purchase
  
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model Promotion {
  id          String   @id @default(cuid())
  code        String   @unique
  title       String
  description String?
  discount    Float
  type        String   @default("PERCENTAGE")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Broadcast {
  id          String   @id @default(cuid())
  subject     String
  message     String
  sentAt      DateTime @default(now())
  recipients  Int      @default(0)
}

// Quoter Engine Models
model QuoterCategory {
  id        String          @id @default(cuid())
  name      String
  slug      String          @unique
  options   QuoterOption[]
}

model QuoterOption {
  id          String         @id @default(cuid())
  name        String
  value       String?
  image       String?        // URL of the image/icon
  priceMod    Float          @default(0)
  isPercentage Boolean       @default(false)
  
  categoryId  String
  category    QuoterCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model GlobalSetting {
  id          String @id @default("settings")
  minWidth    Float  @default(50)
  maxWidth    Float  @default(400)
  minHeight   Float  @default(50)
  maxHeight   Float  @default(300)
  baseMargin  Float  @default(30)
}
